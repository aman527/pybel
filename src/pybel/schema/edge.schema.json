{
    "$schema": "https://json-schema.org/draft/2019-09/schema#",
    "title": "BEL Edge",
    "description": "Top-level schema to validate JSON files containing an edge.",
    "type": "object",
    "properties": {
        "source": {"$ref": "base_node.schema.json"},
        "target": {"$ref": "base_node.schema.json"},
        "relation": {"type": "string"},
        "evidence": {"type": "string"},
        "citation": {
            "type": "object",
            "properties": {
                "db": {"type": "string"},
                "db_id": {"type": "string"}
            }
        },
        "annotations": {
            "type": "object"
        },
        "subject": {"$ref": "modifier.schema.json"},
        "object": {"$ref": "modifier.schema.json"}
    },
    "required": ["source", "target", "relation"]
}